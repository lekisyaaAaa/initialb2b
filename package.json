{
  "name": "beantobin-environmental-monitoring",
  "version": "1.0.0",
  "description": "BeanToBin Environmental Monitoring System",
  "main": "backend/server.js",
  "scripts": {
    "start": "pm2 start ecosystem.config.js",
    "start:dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "start:pm2": "pm2 start ecosystem.config.js",
    "stop": "pm2 stop all",
    "restart": "pm2 restart all",
    "status": "pm2 list",
    "logs": "pm2 logs",
    "backend": "cd backend && npm start",
    "frontend": "cd frontend && npm start",
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "smoke": "node ./scripts/run-no-debug.js ./scripts/integration-smoke.js",
    "smoke-ui": "node ./scripts/run-no-debug.js ./scripts/ui-login.js && node ./scripts/run-no-debug.js ./scripts/verify-token.js",
    "seed-admin": "node ./backend/scripts/seed-admin.js",
    "install-all": "npm run install-backend && npm run install-frontend",
    "install-backend": "cd backend && npm install",
    "install-frontend": "cd frontend && npm install",
    "precommit-check": "node ./scripts/integration-smoke.js",
    "test:system": "node backend/tests/system-functionality.test.js",
    "test:system:frontend": "npm run test:system && echo 'Frontend dashboard auto-updates via Socket.IO'"
  },
  "keywords": [
    "environmental",
    "monitoring",
    "iot",
    "sensors",
    "react",
    "nodejs"
  ],
  "author": "BeanToBin",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "husky": "^8.0.0"
  },
  "dependencies": {
    "jsonwebtoken": "^9.0.2",
    "mqtt": "^5.14.1",
    "nodemailer": "^6.9.9",
    "puppeteer": "^24.19.0"
  }
}
