# Environment Configuration
NODE_ENV=development
PORT=5000

# Database Configuration - Local MongoDB
MONGODB_URI=mongodb://localhost:27017/beantobin_environmental_monitoring
# Alternative: Use MongoDB Atlas for cloud database
# MONGODB_URI=mongodb+srv://test_user:test_password@cluster0.mongodb.net/environmental_monitoring?retryWrites=true&w=majority

# JWT Secret (Generate a strong secret in production)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_123456789

# Twilio SMS Configuration (Optional for initial testing)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# Alert Thresholds (Default values)
DEFAULT_TEMP_THRESHOLD=30
DEFAULT_HUMIDITY_THRESHOLD=80
DEFAULT_MOISTURE_THRESHOLD=20

# Rate Limiting
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100

# CORS Origins (comma-separated for multiple origins)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:3001,http://127.0.0.1:3001,http://localhost:3002,http://127.0.0.1:3002
