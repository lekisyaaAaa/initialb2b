# Core Server
NODE_ENV=development
PORT=5000

# Database (PostgreSQL only)
DATABASE_URL=postgres://postgres:password@127.0.0.1:5432/beantobin

# Security & Auth
JWT_SECRET=replace_with_strong_secret
RESET_TOKEN_EXPIRY_MINUTES=15
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=5

# Email / SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=your_email_user@example.com
EMAIL_PASS=your_app_password
EMAIL_FROM="BeanToBin <noreply@beantobin.com>"
ADMIN_LOGIN_USERNAME=your_email_user@example.com
ADMIN_LOGIN_PASSWORD=your_app_password

# Frontend & Device Integration
CORS_ORIGIN=https://beantobin.onrender.com
ESP32_URL=http://192.168.0.50
ESP32_COMMAND_TIMEOUT_MS=5000

# Optional integrations
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Threshold defaults (optional overrides)
DEFAULT_TEMP_THRESHOLD=30
DEFAULT_HUMIDITY_THRESHOLD=80
DEFAULT_MOISTURE_THRESHOLD=20
